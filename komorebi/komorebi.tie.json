{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "mouse_follows_focus": true,
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "border": true,
  "border_colours": {
    "single": "#458588",
    "stack": "#98971a",
    "monocle": "#b16286",
    "unfocused": "#7c6f64",
    "floating": "#d79921"
  },
  "border_width": 5,
  "border_offset": -1,
  "border_implementation": "Komorebi",
  "display_index_preferences": {
    "0": "DELA0B2-4&38b6bd55&0&UID198147",
    "1": "GSM77BD-5&2bf28931&0&UID4356",
    "2": "DELA0A4-5&2bf28931&0&UID4353"
  },
  "bar_configurations": [
    "$Env:USERPROFILE/.config/komorebi/komorebi.bar.tie_left.json",
    "$Env:USERPROFILE/.config/komorebi/komorebi.bar.4k.json",
    "$Env:USERPROFILE/.config/komorebi/komorebi.bar.tie_right.json"
  ],
  "monitors": [
    {
      "window_based_work_area_offset_limit": 1,
      "window_based_work_area_offset": {
        "left": 0,
        "top": 200,
        "right": 0,
        "bottom": 400
      },
      "workspaces": [
        { "name": "I", "layout": "Rows" },
        { "name": "II", "layout": "Rows" },
        { "name": "III", "layout": "Rows" },
        { "name": "IV", "layout": "Rows" }
      ]
    },
    {
      "window_based_work_area_offset_limit": 1,
      "window_based_work_area_offset": {
        "left": 325,
        "top": 180,
        "right": 650,
        "bottom": 360
      },
      "workspaces": [
        { "name": "Alpha", "layout": "Grid" },
        { "name": "Beta", "layout": "Grid" },
        { "name": "Gamma", "layout": "Grid" },
        { "name": "Delta", "layout": "Grid" }
      ]
    },
    {
      "window_based_work_area_offset_limit": 1,
      "window_based_work_area_offset": {
        "left": 0,
        "top": 30,
        "right": 0,
        "bottom": 60
      },
      "workspaces": [
        { "name": "Zeta",  "layout": "Rows" },
        { "name": "Theta", "layout": "Rows" },
        { "name": "Iota",  "layout": "Rows" },
        { "name": "Kappa", "layout": "Rows" }
      ]
    }
  ],
  "manage_rules": [
    {
      "kind": "Exe",
      "id": "ConEmu64.exe"
    },
    {
      "kind": "Title",
      "id": "\\| Microsoft Teams",
      "matching_strategy": "Regex"
    }
  ],
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "Zebar.exe",
      "matching_rules": "Equals"
    }
  ],
  "stackbar": {
    "height": 25,
    "label": "Process",
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#98971a",
      "unfocused_text": "#928374",
      "background": "#282828"
    }
  },
  "animation": {
    "enabled": true,
    "duration": 120,
    "style": "EaseOutCirc"
  }
}
